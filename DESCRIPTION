Package: gfsynopsis
Title: Data Synopsis Reports for PBS Groundfish
Version: 0.0.2
Authors@R: c(
    person("Sean", "Anderson", , "sean.anderson@dfo-mpo.gc.ca", role = c("aut", "cre")),
