par(mai=cmai)
hist(vals, main ="", xlab="Weight, g", breaks=20, xlim=xlimhist, ylim=ylimhist)
xvals = seq(40, 160, length=200)
yvals = dnorm(xvals, 100, 20)
lines(xvals, yvals*500*5, col="red", lwd=3) # 6 is width/breaks
@

\end{frame}

